<h2>用户注册</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :用户名 %><br />
  <%= f.text_field :login, :autofocus => true %></div>

  <div><%= f.label :密码 %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :重复密码 %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :姓名 %><br />
  <%= text_field_tag :real_name, '', placeholder: '请输入真实姓名' %></div>

  <div><%= f.label :性别 %><br />
  <%= f.select :gender, %w(男 女) %></div>

  <div><%= f.label :学校 %><br />
  <%= f.select :school_id, School.all.collect {|s| [s.name, s.id]} %></div>

  <div><%= f.label :联系方式 %><br />
  <%= f.email_field :email, :autofocus => true, placeholder: '邮箱地址' %></div>

  <div><%= f.label :验证码 %><br />
  <%= text_field_tag :auth_code %></div>

  <div><%= f.submit "确认注册" %></div>
<% end %>

<%= render "devise/shared/links" %>
