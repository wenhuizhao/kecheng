.words.select 请选择班级
.opts
  - classes.each do |c|
    .words.opt data-id='#{c}' class='#{c == current_user.class_num.to_i ? 'hover' : ''}'
      = c.to_cnum + '班'

javascript:
  $('.classes').find('.select').click(function() {
    return $(this).parent().find('.opts').toggle();
  });
  $('.classes').find('.opt').each(function(i, obj) {
    $(obj).click(function(){
      $('.classes').find('.hover').removeClass('hover');
      var class_num = $(obj).attr('data-id');
      $('#class_num').attr('value', class_num);
      $('.classes').find('.select').html($(obj).html());
      $('.classes').find('.opts').hide();
      $(this).addClass('hover')
    });
  });

