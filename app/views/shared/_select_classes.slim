- classes.each do |c|
  .words data-id='#{c}' class='#{c == current_user.class_num.to_i ? 'hover' : ''}'
    = c.to_cnum + 'Áè≠'

javascript:
  $('.classes').find('.words').each(function(i, obj) {
    $(obj).click(function(){
      $('.classes').find('.hover').removeClass('hover');
      var class_num = $(obj).attr('data-id');
      $('#class_num').attr('value', class_num);
      $(this).addClass('hover')
    });
  });

